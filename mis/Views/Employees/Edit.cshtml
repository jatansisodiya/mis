                            @Html.LabelFor(m => m.Email_address, new { @class = "col-sm-4 col-form-label" })
                            <div class="col-md-8">
                                @Html.EditorFor(m => m.Email_address, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col">
                        <div class="row mb-3">
                            @Html.LabelFor(m => m.Aadhaar_number, new { @class = "col-sm-4 col-form-label" })
                            <div class="col-md-8">
                                @Html.EditorFor(m => m.Aadhaar_number, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
