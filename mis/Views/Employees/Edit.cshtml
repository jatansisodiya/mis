                        <div class="row mb-3">
                            @Html.LabelFor(m => m.Address, new { @class = "col-sm-4 col-form-label" })
                            <div class="col-md-8">
                                @Html.EditorFor(m => m.Address, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>

                    <div class="form-group col">
                        <div class="row mb-3">
                            @Html.LabelFor(m => m.Mobile_number, new { @class = "col-sm-4 col-form-label" })
                            <div class="col-md-8">
                                @Html.EditorFor(m => m.Mobile_number, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
