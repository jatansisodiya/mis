@model mis.Models.Pc

@{
    ViewBag.Title = "Delete";
}


<div class="container-fluid pt-4 px-4">
    <div class="row vh-100 bg-secondary rounded align-items-center justify-content-center mx-0">
        <div class="col-md-8 text-center">

            <h3>Are you sure you want to delete this?</h3>
            <hr />
            <div class="table-responsive">
                <table class="table text-start align-middle table-bordered table-hover mb-1">
                    <tr class="text-white">
                        <th>
                            Fields
                        </th>
                        <th>
                            Data
                        </th>
                    </tr>

                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Company_name)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Company_name)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Model_no)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Model_no)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Product_id)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Product_id)
                        </td>
                    </tr>

                </table>
            </div>
            <br />
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-outline-danger" />
                </div>
            }

        </div>
    </div>
</div>


















