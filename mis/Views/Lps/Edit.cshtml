@model mis.Models.Lp

@{
    ViewBag.Title = "Edit";
}

<div class="container-fluid pt-4 px-4">
    <div class="row vh-100 bg-secondary rounded align-items-center justify-content-center mx-0">
        <div class="col-md-8 text-center">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.id)
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <br />
                <h2 class="text-center">Edit Laptop Details</h2>
                <hr />



                <div class="form-group">
                    <div class="row mb-3">
                        @Html.LabelFor(m => m.Company_name, new { @class = "col-sm-4 col-form-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Company_name, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row mb-3">
                        @Html.LabelFor(m => m.Model_no, new { @class = "col-sm-4 col-form-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Model_no, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row mb-3">
                        @Html.LabelFor(m => m.Product_id, new { @class = "col-sm-4 col-form-label" })
                        <div class="col-md-8">
                            @Html.TextBoxFor(m => m.Product_id, new { @class = "form-control" })
                        </div>
                    </div>
                </div>

                @Html.ValidationSummary("", new { @class = "text-danger col-6" })


                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-outline-success" />
                    </div>
                </div>








            </div>
            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }

        </div>
    </div>
</div>
